<% provide(:title, @product.title) %>
<div class="page-header">
  <h1><%= @product.title %></h1>
</div>
<h2 class="lead"><%= sanitize(@product.description.split(". ").first) %>.</h2>

<%=link_to products_path, class: "btn btn-default mb-20" do %>
  <span>Return to store</span>
<% end %>

<div class="thumbnail">
  <%= image_tag("http://placehold.it/800x300", class: "img-responsive", alt: "") %>
  <div class="caption-full">
    <h4 class="pull-right"><%= number_to_currency(@product.price) %></h4>
    <h4><%= @product.title %></h4>
    <span class="pull-right">
      <p> 
        <%= button_to("Add to cart", line_items_path(product_id: @product), class: "btn btn-primary", 
            remote: true) %>
      </p>
    </span>
    <div>
      <p><%= sanitize(@product.description) %></p>
    </div>
  </div>
</div>
