<% provide(:title, @product.title) %>
<div class="page-header">
  <h1>Products#show</h1>
</div>
<p class="lead">Find me in app/views/products/show.html.erb</p>
<p><%= link_to "Return to products", products_path%></p>

<div class="thumbnail">
  <%= image_tag("http://placehold.it/800x300", class: "img-responsive", alt: "") %>
  <div class="caption-full">
    <h4 class="pull-right"><%= number_to_currency(@product.price) %></h4>
    <h4><%= @product.title %></h4>
    <span class="pull-right">
      <a href="#" class="btn btn-primary" role="button">Add to cart</a>
    </span>
    <div>
      <p><%= sanitize(@product.description) %></p>
    </div>
  </div>
</div>