<% provide(:title, "New Order") %>

<div class="page-header">
  <h1>Orderss#new</h1>
</div>
<p class="lead">Find me in app/views/orders/new.html.erb</p>

<h3>Order Summary</h3>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% @cart.line_items.order("created_at desc").each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= number_to_currency(item.product.price) %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.total_price) %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="3"><h4>Cart Total</h4></td>
      <td><h4 class="cart_total"><%= number_to_currency(@cart.total_price)%></h4></td>
    </tr>
  </tbody>
</table>

<h3>Complete Checkout</h3>
<%= form_tag orders_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
  </article>

  <div class="test">
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-label= "Enter Address and Payment Details"
            data-description="Ecom App Payment"
            data-amount="<%= (@cart.total_price * 100).to_i %>"
            data-email="user@test.com"
            data-shipping-address=true
            data-billing-address=true
            data-locale="auto"></script>
  </div>
<% end %>
