<% provide(:title, "Orders") %>

<div class="page-header">
  <h1>Orders</h1>
</div>
<h2 class="lead">Your Order History</h2>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Billing Name</th>
      <th>Total</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td><%= order.created_at.strftime("%B %d, %Y") %>
      </tr>
    <% end %>
  </table>
</tbody>
