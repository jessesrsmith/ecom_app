<% provide(:title, "Cart") %>
<div class="page-header">
  <h1>Carts#show</h1>
</div>
<p class="lead">Find me in app/views/carts/show.html.erb</p>

<%=link_to products_path, class: "btn btn-default" do %>
  <span>Return to store</span>
<% end %>

<% if !@cart.line_items.empty? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart.line_items.order("created_at desc").each.each do |item| %>
        <tr>
          <td><%= item.product.title %></td>
          <td><%= number_to_currency(item.product.price) %></td>

          <td class="col-md-2">
            <%= form_for item, html: { class: "form-inline item-quantity" } do |f| %>
              <div class="col-md-6">
                <%= f.number_field :quantity, value: item.quantity, min: 1, class: "input-sm" %>
              </div>
              <div class="col-md-6">
                <%= f.submit "Update", class: "btn btn-sm btn-default" %>
              </div>
            <% end %>
          </td>

          <td><%= number_to_currency(item.total_price) %></td>
          <td class="col-md-1" style="text-align: center">
            <%= link_to item, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>

        </tr>
      <% end %>
      <tr>
        <td colspan="3"><h4>Cart Total</h4></td>
        <td><h4 class="cart_total"><%= number_to_currency(@cart.total_price)%></h4></td>
        <td></td>
      </tr>
    </tbody>
  </table>

  <%=link_to "#", class: "btn btn-success pull-right" do %>
    <span>Checkout</span>
  <% end %>

  <div class="btn_holder">
    <%= button_to("Empty cart", @cart, method: :delete, class: "btn btn-default", data: {confirm: "Are you sure?"}) %>
  </div>
<% end %>
